<div class="container">
<div class="row paypay text-center">
<h1>Now it's time to pay</h1>

<%= form_tag new_shopping_cart_payment_path(@shopping_cart) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@shopping_cart.total) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="The Good Style"
    data-email="<%= current_user.email %>"
    data-description="Sustainable clothing <%= @shopping_cart.id %>"
    data-amount="<%= @shopping_cart.amount_cents %>"
    data-currency="<%= @shopping_cart.amount.currency %>"></script>
<% end %>
</div>
</div>


