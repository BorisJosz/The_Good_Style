<div class="carousel-container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

      <div class="item active carousel-image" style="background-image: url('https://res.cloudinary.com/megednazednav/image/upload/v1522237745/The%20Good%20Style/carousel1.jpg')">
      </div>

      <div class="item carousel-image" style="background-image: url('https://res.cloudinary.com/megednazednav/image/upload/v1522237746/The%20Good%20Style/carousel2.jpg')">
      </div>

      <div class="item carousel-image" style="background-image: url('https://res.cloudinary.com/megednazednav/image/upload/v1522237746/The%20Good%20Style/carousel3.jpg')">
      </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="audience-container">
  <div class="row">
  <%  @target_audiences.each do |audience| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to "/#{audience.gender}" do  %>
        <div class = "card-audience" style="background-image: url( <%= audience.target_photo %> );">
          <div class= "card-audience-text">
            <h2> <%= audience.gender.capitalize %></h2>
          </div>
        </div>
    <%end %>

    </div>
    <%end %>
  </div>
</div>
