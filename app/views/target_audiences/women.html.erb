<div class="wrapper">
  <div class="container text-center">
    <%= image_tag ("https://res.cloudinary.com/megednazednav/image/upload/v1522237746/The%20Good%20Style/logo.png"), width: "100px", class: "centered-logo" %>
    <h1>Shop our beautiful women's clothes</h1>
    <br>
    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <%= form_tag '/women', method: :get do %>
        <%= select_tag(:product_category, options_for_select([['Blouse', 1], ['Dress', 2], ['Ensemble', 3],['Jacket', 4],['Jeans', 5],['Shirt', 6],['Skirt', 7],['Sweater', 8],['Top', 9],['Trousers', 10] ])) %>
        <%= submit_tag "Filter" %>
        <% end %>
      </div>
    </div>
    <br>
    <div class="row">
      <% @products.each do |product| %>
      <%= link_to product_path(product) do %>
        <div class="col-xs-12 col-sm-4 col-md-3">
          <div class = "card text-center">

            <div class="card-image-container" style="background-image:url(<%= product.image %>); " alt="cart">

          </div>
            <div class="card-text">
              <h3><%= product.name %></h3>
              <h4>by <%= product.brand.name %></h4>
              <h4><%= humanized_money_with_symbol(product.price) %></h4>

            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>






