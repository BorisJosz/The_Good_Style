            <div class="select">

               <h5>Pick your size &nbsp; <i class="fas fa-chevron-down"></i>
              </h5>

<%= simple_form_for @product_variations, url: product_add_item_path(@product) do |f| %>
  <%= f.input :size, collection: @product.sizes.uniq,value_method: :id,placeholder: 'pick your size',label_method: :size, label:false  %>
  <%= f.input :color, collection: @product.colors.uniq, value_method: :id,label_method: :color %>




