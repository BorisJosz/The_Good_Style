
<div class="wrapper">
  <div class="container text-center">
    <div class="row paddingrow">
      <div class="col-xs-12 col-sm-5 show-page">
        <div class="imagebox">
          <div class="show-image" style="background-image:url(<%= @product.image %>); " alt = "product">
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-7 show-page text-left">
        <div class="textbox">
          <h2><i class="fas fa-ellipsis-v"></i> <%= @product.name%></h2>
          <h3>â‚¬ <%= @product.price%></h3>
          <br>
          <p><%= @product.description%></p>
