<div class="log-in">
  <div class="log-in-container">
    <h2><i class="fas fa-ellipsis-v"></i>Log in</h2>
    <p>Go for sustainable shopping</p>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: "Enter your email address" %>
        <%= f.input :password, required: false, placeholder: "Enter a new password" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn-standard" %>
      </div>
    <% end %>

    <div class="form-options">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
